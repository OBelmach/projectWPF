<Window x:Class="Lesson_13_2.OpenAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson_13_2"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="OpenAccount" Height="150" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Введите колличество денег" Width="170" HorizontalAlignment="Center" FontWeight="Bold"/>
            <TextBox x:Name="money" Width="160" HorizontalAlignment="Center" materialDesign:HintAssist.Hint="Введите колличество денег" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
            <Button x:Name="save" Margin="0 20 0 0" Content="Подтвердить" HorizontalAlignment="Center"  VerticalAlignment="Top" Click="Confirm_Click"/>
        </StackPanel>
    </Grid>
</Window>
